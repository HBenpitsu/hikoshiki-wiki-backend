{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "extends": "expo/tsconfig.base",
  "allowJs": true,
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}